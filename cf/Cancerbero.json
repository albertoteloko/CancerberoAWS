{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "CancerberoPool": {
      "Type": "AWS::Cognito::UserPool",
      "Properties": {
        "UserPoolName": "CancerberoPool",
        "Schema": [
          {
            "Name": "given_name",
            "AttributeDataType": "String",
            "Mutable": true,
            "Required": true
          }
        ],
        "UsernameAttributes": [
          "email",
          "phone_number"
        ],
        "MfaConfiguration": "OPTIONAL",
        "AdminCreateUserConfig": {
          "AllowAdminCreateUserOnly": true
        },
        "AutoVerifiedAttributes": [
          "email",
          "phone_number"
        ],
        "DeviceConfiguration": {
          "DeviceOnlyRememberedOnUserPrompt": false,
          "ChallengeRequiredOnNewDevice": false
        },
        "SmsConfiguration": {
          "ExternalId": "a8f7ad56-bc22-422a-89c2-b4ec26150f6f",
          "SnsCallerArn": {
            "Fn::GetAtt": [
              "CognitoSMSRole",
              "Arn"
            ]
          }
        }
      }
    },
    "Autho":{
      "Type": "AWS::ApiGateway::Authorizer",
      "Properties": {
        "Name": "asd",
        "Type": "COGNITO_USER_POOLS",
        "ProviderARNs": ["arn:aws:cognito-idp:eu-central-1:598555414863:userpool/eu-central-1_HGUt2sSsH"]
      }
    },
    "CognitoSMSRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "CognitoSMS",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Service": "cognito-idp.amazonaws.com"
              },
              "Action": "sts:AssumeRole",
              "Condition": {
                "StringEquals": {
                  "sts:ExternalId": "a8f7ad56-bc22-422a-89c2-b4ec26150f6f"
                }
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "CognitoSMSRolePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "sns:publish"
                  ],
                  "Resource": [
                    "*"
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  }
}